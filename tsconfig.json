{
    "compilerOptions": {
        "target": "es2015",
        "module": "Node16",
        "moduleResolution": "node",
        "allowJs": false,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}